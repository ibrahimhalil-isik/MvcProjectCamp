@model EntityLayer.Concrete.Category

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni bir kategori ekleme sayfası</h1>
<br />
@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(c => c.CategoryName)
    @Html.ValidationMessageFor(c => c.CategoryName)
    <br /><br />

    @Html.Label("Açıklamayı yazınız")
    @Html.TextBoxFor(c => c.CategoryDescription)
    @Html.ValidationMessageFor(c => c.CategoryDescription)
    <br /><br />
    <button class="btn btn-info">Kaydet</button>
</div>
}